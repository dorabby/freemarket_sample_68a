.header
  .header_box
    .header_box__main
      .header_box__main__image
        = link_to root_path do
          = image_tag("logo.png")
      .header_box__main__search
        = form_with(url: search_items_path, local: true, method: :get, class: "header_box__main__search__keyword__form") do |f|
          = f.text_field :keyword, value: @search_params, placeholder: " 何かお探しですか？", class: "header_box__main__search__keyword__form"
          %button{type: "submit", class:'header_box__main__search__keyword__form__btn'} 
            = icon('fas', 'search',class: 'header_box__main__search__keyword__form__btn__icon')
    .menu
      %ul.left-list
        %li.first
          = link_to "カテゴリー","#", id:"link"
          .tree.displaynone
            %ul.categorytree
              %li.categorytree__item 
                = link_to "レディース","#",id:"1"
              %li.categorytree__item
                = link_to "メンズ", "#",id:"2"
              %li.categorytree__item 
                = link_to "インテリア・住まい・小物", "#",id:"3"
              %li.categorytree__item 
                = link_to "本・音楽・ゲーム", "#",id:"4"
              %li.categorytree__item 
                = link_to "おもちゃ・ホビー・グッズ", "#",id:"5"
              %li.categorytree__item 
                = link_to "コスメ・香水・美容", "#",id:"6"
              %li.categorytree__item 
                = link_to "家電・スマホ・カメラ", "#",id:"7"
              %li.categorytree__item
                = link_to "スポーツ・レジャー", "#",id:"8"
              %li.categorytree__item 
                = link_to "ハンドメイド", "#",id:"9"
              %li.categorytree__item 
                = link_to "チケット", "#",id:"10"
              %li.categorytree__item 
                = link_to "自動車・オートバイ", "#",id:"11"
              %li.categorytree__item 
                = link_to "その他", "#",id:"12"
        %li.second
          = link_to "ブランド","#", class:"link"
      .light-list
        -if user_signed_in?
          =link_to "ログアウト", destroy_user_session_path, method: :delete
          =link_to "マイページ", user_path(current_user)
        -else 
          =link_to "ログイン", new_user_session_path
          =link_to "新規会員登録", new_user_registration_path