                = link_to "本・音楽・ゲーム", "#",id:"4"
              %li.categorytree__item 
                = link_to "おもちゃ・ホビー・グッズ", "#",id:"5"
              %li.categorytree__item 
                = link_to "コスメ・香水・美容", "#",id:"6"
              %li.categorytree__item 
                = link_to "家電・スマホ・カメラ", "#",id:"7"
              %li.categorytree__item
                = link_to "スポーツ・レジャー", "#",id:"8"
              %li.categorytree__item 
                = link_to "ハンドメイド", "#",id:"9"
              %li.categorytree__item 
                = link_to "チケット", "#",id:"10"
              %li.categorytree__item 
                = link_to "自動車・オートバイ", "#",id:"11"
