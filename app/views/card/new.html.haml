.content_title
  クレジットカード情報入力
= form_tag(pay_card_index_path, method: :post, id: 'charge-form',  name: "inputForm") do
  .form__upper
    .form__upper__group
      %label カード番号
      %span.form-require 必須
      = text_field_tag "number", "", class: "number", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
      %br
      %ol
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/Visa.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/Master-card.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/Saison.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/jcb.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/American_Express.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/DinersClub.png'}"}
        %li
          %object{type: "image/png", data: "#{asset_path 'cardlogo/Discover.png'}"}
    .form__upper__group.exp
      .name
        %label 有効期限
        %span.form-require 必須
      %select#exp_month.exp_input{name: "exp_month", type: "text"}
        %option{value: ""} --
        %option{value: "1"}01
        %option{value: "2"}02
        %option{value: "3"}03
        %option{value: "4"}04
        %option{value: "5"}05
        %option{value: "6"}06
        %option{value: "7"}07
        %option{value: "8"}08
        %option{value: "9"}09
        %option{value: "10"}10
        %option{value: "11"}11
        %option{value: "12"}12
      %span 月
      %select#exp_year.exp_input{name: "exp_year", type: "text"}
        %option{value: ""} --
        %option{value: "2020"}20
        %option{value: "2021"}21
        %option{value: "2022"}22
        %option{value: "2023"}23
        %option{value: "2024"}24
        %option{value: "2025"}25
        %option{value: "2026"}26
        %option{value: "2027"}27
        %option{value: "2028"}28
        %option{value: "2029"}29
        %option{value: "2030"}30
      %span 年
      %br
    .form__upper__group#secret_code
      %label セキュリティコード
      %span.form-require 必須
      = text_field_tag "cvc", "", class: "cvc", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
    .form__upper__group
      %p.about
        = fa_icon 'question-circle'
        %span
        = link_to 'カード裏面の番号とは？', root_path, class:'about__cvc'
    .form__upper__group__submit
      #card_token
      = submit_tag "登録する", id: "token_submit", class: "submit-btn"