-@items.each do |item|
  .search-main__result__box__list
    = link_to image_tag(item.images[0].image.url, class: "search-main__result__box__list__image"), item_path(item.id)

    .search-main__result__box__list__name
      %h3.name
        = item.name
      .search-main__result__box__list__name__detail
        %ul
          %li
            = "#{item.price}円"
          %li
            = icon('fa','star',class: 'icon')
            0
        %p (税込)
        -if item.buyer_id.present? 
          .search-main__result__box__list__name__detail__sold
            .search-main__result__box__list__name__detail__sold__inner
              SOLD



