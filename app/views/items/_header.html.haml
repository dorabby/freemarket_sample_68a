.header
  .header_box
    .header_box__main
      .header_box__main__image
        = image_tag("logo.png")
      .header_box__main__search
        %input{placeholder: " キーワードから探す", type: "text"}/
      .header_box__main__btn
        %input{type: "submit",class: "send"}/
        = image_tag("icon-search 1.png")
    .header_box__sub
      .header_box__sub__left-list
        .header_box__sub__left-list__catbtn
          =link_to "カテゴリー","#"
        .header_box__sub__left-list__brandbtn
          =link_to "ブランド","#"
      .header_box__sub__light-list
        .header_box__sub__light-list__logbtn
          =link_to "ログイン","#"
        .header_box__sub__light-list__newbtn
          =link_to "新規会員登録","#"